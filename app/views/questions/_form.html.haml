= simple_form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :name
  .field
    = f.input :vote_type
  .field
    = f.label :flag
    = f.check_box :flag
  %br
    
  .actions
    = f.submit 'Save'